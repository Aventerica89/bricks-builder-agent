{
  "manifest_version": 3,
  "name": "Env Var Assistant",
  "version": "1.0.0",
  "description": "Detect, store, and auto-fill API keys with 1Password",
  "permissions": [
    "clipboardRead",
    "nativeMessaging",
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://platform.openai.com/*",
    "https://dash.cloudflare.com/*",
    "https://vercel.com/*",
    "https://app.netlify.com/*",
    "https://supabase.com/*",
    "https://*.supabase.co/*"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://platform.openai.com/*",
        "https://dash.cloudflare.com/*",
        "https://vercel.com/*",
        "https://app.netlify.com/*",
        "https://supabase.com/*",
        "https://*.supabase.co/*"
      ],
      "js": ["content/detector.js", "content/filler.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
